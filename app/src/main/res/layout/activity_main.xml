<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

        <LinearLayout
                android:id="@+id/panel1"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto 1"/>

            <TextView
                    android:id="@+id/contador1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/panel2"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary"
                android:layout_marginHorizontal="10dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto 2"/>

            <TextView
                    android:id="@+id/contador2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/panel3"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto 3"/>

            <TextView
                    android:id="@+id/contador3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

        <LinearLayout
                android:id="@+id/panel4"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:background="@color/colorPrimary">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto 4"/>

            <TextView
                    android:id="@+id/contador4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/panel5"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:orientation="vertical"
